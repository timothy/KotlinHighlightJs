{
  "name": "kotlin-darcula-syntax",
  "displayName": "kotlin-darcula-syntax",
  "description": "Kotlin Darcula Syntax Highlighter",
  "version": "0.0.1",
  "publisher": "Hweean",
  "repository": "https://github.com/timothy/KotlinHighlightJs",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Syntax",
    "Kotlin"
  ],
  "activationEvents": [
    "onCustomEditor:kotlin.highlightjs.editor"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "kotlin.highlightjs.editor",
        "displayName": "Kotlin Darcula Syntax Highlighter",
        "selector": [
          { "filenamePattern": "*.kt" },
          { "filenamePattern": "*.kts" }
        ]
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/assert": "^1.5.10",
    "eslint": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "mocha": "^10.7.3",
    "typescript": "^5.6.3",
    "@vscode/test-web": "^0.0.63",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@types/webpack-env": "^1.18.5",
    "assert": "^2.1.0",
    "process": "^0.11.10"
  }
}
